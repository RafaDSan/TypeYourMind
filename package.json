{
  "name": "typeyourmind",
  "version": "1.0.0",
  "description": "",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "dev:staging": "tsx --watch --env-file .env.staging src/index.ts",
    "dev:prod": "tsx --watch --env-file .env.production src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . ",
    "prepare": "husky",
    "tree": "tree -I 'node_modules|.git'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RafaDSan/TypeYourMind.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/RafaDSan/TypeYourMind/issues"
  },
  "homepage": "https://github.com/RafaDSan/TypeYourMind#readme",
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "express": "^5.1.0",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tsconfig/node23": "^23.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
